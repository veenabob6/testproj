<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="main.java.com.veena.hello.dvo.FilmText" table="film_text" schema="sakila">
        <id name="filmId">
            <column name="film_id" sql-type="smallint(6)"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(255)"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>