<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="main.java.com.veena.hello.dvo.SalesByStore" table="sales_by_store" schema="sakila">
        <id name="store">
            <column name="store" sql-type="varchar(101)" length="101" not-null="true"/>
        </id>
        <property name="manager">
            <column name="manager" sql-type="varchar(91)" length="91" not-null="true"/>
        </property>
        <property name="totalSales">
            <column name="total_sales" sql-type="decimal(27,2)" precision="27" scale="2" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>